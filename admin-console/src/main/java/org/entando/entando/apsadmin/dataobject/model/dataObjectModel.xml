<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	
	<package name="core_do/dataobject/model" namespace="/do/dataobject/model" extends="entando-default">
		
    	<action name="list" class="DataObjectModelFinderAction">
            <result type="tiles">admin.jacms.contentModel.list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="search" class="DataObjectModelFinderAction">
            <result type="tiles">admin.jacms.contentModel.list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
		<action name="new" class="DataObjectModelAction" method="newModel">
            <result type="tiles">admin.jacms.contentModel.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
		
     	<action name="lockContentType" class="DataObjectModelAction">
            <result type="tiles">admin.jacms.contentModel.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
		
     	<action name="edit" class="DataObjectModelAction" method="edit">
            <result type="tiles">admin.jacms.contentModel.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
		
    	<action name="save" class="DataObjectModelAction" method="save">
            <result type="tiles" name="input">admin.jacms.contentModel.entry</result>
        	<result type="redirectAction">list</result>
			<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="trash" class="DataObjectModelAction" method="trash">
            <result type="tiles" name="references">admin.jacms.contentModel.reference</result>
            <result type="tiles">admin.jacms.contentModel.trash</result>
        	<result type="redirectAction" name="noModel">list</result>
			<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="delete" class="DataObjectModelAction" method="delete">
    		<result type="tiles" name="references">admin.jacms.contentModel.reference</result>
            <result type="chain">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
		
	</package>
	
</struts>